@model List<odev1.Models.Member>

@{
    ViewData["Title"] = "Üye Yönetimi - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    .admin-card {
        border: none;
        border-radius: 12px;
        background-color: #fff;
    }

    /* Tablo Sadeleştirme */
    .custom-table {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .custom-table thead th {
            border: none;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #999;
            font-weight: 700;
            padding-bottom: 20px;
        }

        .custom-table tbody tr {
            background-color: #fafafa;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .custom-table tbody tr:hover {
                background-color: #fff;
                transform: scale(1.005);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .custom-table td {
            border: none;
            padding: 20px;
            vertical-align: middle;
            font-size: 0.95rem;
        }

            .custom-table td:first-child {
                border-radius: 12px 0 0 12px;
            }

            .custom-table td:last-child {
                border-radius: 0 12px 12px 0;
            }

    /* Profil İkonu */
    .user-avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #eee;
        color: #777;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-weight: 700;
        font-size: 0.8rem;
    }

    /* Butonlar */
    .btn-details {
        background-color: #111;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 8px 16px;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
    }

        .btn-details:hover {
            background-color: #ff6b00;
            color: #fff;
        }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold mb-1">Üye Yönetimi</h2>
            <p class="text-muted small mb-0">Toplam @Model.Count kayıtlı sporcu listeleniyor.</p>
        </div>
        <div class="d-none d-md-block">
            <span class="text-muted small">Son Güncelleme: @DateTime.Now.ToString("HH:mm")</span>
        </div>
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Sporcu</th>
                        <th>Email</th>
                        <th>Kayıt Tarihi</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar-circle">
                                        @member.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold">@member.FullName</div>
                                        <div class="text-muted small">Sporcu No: #@member.Id</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">
                                @member.User.Email
                            </td>
                            <td class="text-muted">
                                @member.KayitTarihi.ToString("dd MMM yyyy")
                            </td>
                            <td class="text-end">
                                <a href="#" class="btn-details">
                                    Profili Gör
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded-3 mt-4">
            <p class="text-muted mb-0">Sisteme henüz bir üye kaydı yapılmamış.</p>
        </div>
    }

    <div class="mt-5 border-top pt-4">
        <a asp-controller="Admin" asp-action="Index" class="text-muted text-decoration-none small">
            <i class="fas fa-chevron-left me-1"></i> Yönetim Paneline Dön
        </a>
    </div>
</div>