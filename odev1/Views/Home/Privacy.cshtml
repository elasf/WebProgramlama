@{
    ViewData["Title"] = "İletişim";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Bize Ulaşın</h2>
        <p class="text-muted">Sorularınız için arayabilir veya salonumuzu ziyaret edebilirsiniz.</p>
    </div>

    <div class="row g-5">
        <div class="col-md-5">
            <div class="p-4 bg-light rounded-3 h-100 shadow-sm">
                <h4 class="fw-bold mb-4">LionGym Merkez</h4>

                <div class="d-flex mb-4">
                    <div class="me-3 text-warning">
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Adres</h6>
                        <p class="mb-0 text-muted">Esentepe Kampüsü, Üniversite Cd.<br>Serdivan / Sakarya</p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <div class="me-3 text-warning">
                        <i class="fas fa-phone-alt fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Telefon</h6>
                        <p class="mb-0 text-muted">+90 (264) 123 45 67</p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <div class="me-3 text-warning">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">E-Posta</h6>
                        <p class="mb-0 text-muted">info@liongym.com</p>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="me-3 text-warning">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Çalışma Saatleri</h6>
                        <p class="mb-0 text-muted">Hafta İçi: 07:00 - 23:00</p>
                        <p class="mb-0 text-muted">Hafta Sonu: 09:00 - 21:00</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="h-100 bg-white p-2 rounded-3 shadow-sm border">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.9663095343005!2d30.33026337651664!3d40.74081693585822!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccad2bd652c42f%3A0x7e704780516b6c03!2sSakarya%20University!5e0!3m2!1sen!2str!4v1700000000000!5m2!1sen!2str"
                        width="100%"
                        height="450"
                        style="border:0; border-radius: 10px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>