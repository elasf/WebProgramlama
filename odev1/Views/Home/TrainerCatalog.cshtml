@model List<odev1.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Kadromuz - LionGym";
}

<style>
    body {
        background-color: #ffffff;
    }

    .trainer-card {
        border: 1px solid #f0f0f0;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #fff;
    }

        .trainer-card:hover {
            transform: translateY(-10px);
            border-color: #ff6b00;
            box-shadow: 0 20px 40px rgba(0,0,0,0.05);
        }

    /* Üst Alan - Görsel Temsili */
    .trainer-image-area {
        height: 200px;
        background: #fafafa;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .trainer-icon-bg {
        font-size: 5rem;
        color: #eee;
    }

    /* Rozet Stilleri */
    .lion-badge {
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 5px 12px;
        border-radius: 6px;
        display: inline-block;
        margin: 2px;
    }

    .badge-expertise {
        background-color: #f5f5f5;
        color: #666;
    }

    .badge-service {
        background-color: #fff3e6;
        color: #ff6b00;
    }

    .section-label {
        display: block;
        font-size: 0.65rem;
        font-weight: 800;
        color: #bbb;
        letter-spacing: 1.2px;
        margin-bottom: 8px;
        text-transform: uppercase;
    }

    /* Randevu Butonu */
    .btn-randevu {
        background-color: #111;
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.2s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-randevu:hover {
            background-color: #ff6b00;
            color: #fff;
            box-shadow: 0 5px 15px rgba(255, 107, 0, 0.3);
        }
</style>

<div class="container py-5">
    <div class="text-center mb-5 pb-4">
        <h6 class="text-orange fw-bold text-uppercase" style="letter-spacing: 3px; color: #ff6b00;">Ekibimiz</h6>
        <h2 class="fw-bold display-5 text-dark">Uzman Eğitmenler</h2>
        <p class="text-muted mx-auto" style="max-width: 500px;">Hedeflerine giden yolda sana rehberlik edecek Türkiye'nin en iyi fitness kadrosuyla tanış.</p>
    </div>

    <div class="row g-4">
        @foreach (var trainer in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="trainer-card h-100 shadow-sm">

                    <div class="trainer-image-area">
                        <i class="fas fa-user-circle trainer-icon-bg"></i>
                    </div>

                    <div class="card-body p-4">
                        <div class="mb-4 text-center">
                            <h4 class="fw-bold mb-1 text-dark">@trainer.fullName</h4>
                            <p class="text-muted small">LionGym Pro Trainer</p>
                        </div>

                        <div class="mb-4">
                            <span class="section-label">Uzmanlık Alanları</span>
                            @if (trainer.trainerExpertises != null && trainer.trainerExpertises.Any())
                            {
                                foreach (var item in trainer.trainerExpertises)
                                {
                                    <span class="lion-badge badge-expertise">@item.expertise.expertise</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small italic">Genel Fitness</span>
                            }
                        </div>

                        <div class="mb-4">
                            <span class="section-label">Verdiği Hizmetler</span>
                            @if (trainer.trainerServices != null && trainer.trainerServices.Any())
                            {
                                foreach (var item in trainer.trainerServices)
                                {
                                    <span class="lion-badge badge-service">@item.service.name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small italic">Özel Program</span>
                            }
                        </div>

                        <div class="pt-3 border-top">
                            <a asp-controller="Appointments"
                               asp-action="Create"
                               asp-route-trainerId="@trainer.id"
                               class="btn-randevu">
                                <i class="far fa-calendar-alt me-2"></i> RANDEVU AL
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>