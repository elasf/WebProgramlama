@model IEnumerable<odev1.Models.Appointment>
@{
    ViewData["Title"] = "Randevularım";
}

<h2>Randevularım</h2>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Eğitmen</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var a in Model)
    {
        <tr>
            <td>@a.service?.name</td>
            <td>@a.trainer?.fullName</td>
            <td>@a.AppointmentDate.ToString("dd.MM.yyyy")</td>
            <td>@a.StartTime.ToString(@"hh\:mm") - @a.EndTime.ToString(@"hh\:mm")</td>
            <td>@a.Status</td>
            <td>@a.Price.ToString("C")</td>
            <td class="d-flex gap-2">
                <a asp-action="Reschedule" asp-route-id="@a.id"
                   class="btn btn-sm btn-outline-primary @(a.Status == odev1.Models.AppointmentStatus.Cancelled ? "disabled" : "")">Yeniden Planla</a>
                <form asp-action="Cancel" method="post" onsubmit="return confirm('Randevuyu iptal etmek istiyor musunuz?');">
                    <input type="hidden" name="id" value="@a.id" />
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            disabled="@(a.Status == odev1.Models.AppointmentStatus.Cancelled ? "disabled" : null)">
                        İptal
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                <a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>
            </td>
        </tr>
    </tfoot>
}

