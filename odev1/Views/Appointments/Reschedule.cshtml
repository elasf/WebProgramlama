@model odev1.ViewModels.AppointmentRescheduleViewModel
@{
    ViewData["Title"] = "Randevu Düzenle - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    .form-container {
        max-width: 500px;
        margin-top: 50px;
    }

    .info-section {
        border-bottom: 2px solid #f8f9fa;
        margin-bottom: 30px;
        padding-bottom: 20px;
    }

    .info-label {
        font-size: 0.8rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        display: block;
    }

    .info-value {
        font-weight: 700;
        font-size: 1.1rem;
        color: #222;
    }

    .custom-input {
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        background-color: #fafafa;
        transition: all 0.2s;
    }

        .custom-input:focus {
            background-color: #fff;
            border-color: #ff6b00;
            box-shadow: none;
            outline: none;
        }

    .btn-save {
        background-color: #ff6b00;
        color: white;
        border: none;
        padding: 14px;
        border-radius: 8px;
        font-weight: 600;
        width: 100%;
        margin-top: 20px;
        transition: opacity 0.2s;
    }

        .btn-save:hover {
            opacity: 0.9;
            color: white;
        }

    .btn-cancel {
        display: block;
        text-align: center;
        color: #888;
        text-decoration: none;
        font-size: 0.9rem;
        margin-top: 15px;
    }

        .btn-cancel:hover {
            color: #333;
        }
</style>

<div class="container form-container">
    <div class="mb-5">
        <h2 class="fw-bold mb-1">Saati Güncelle</h2>
        <p class="text-muted small">Yeni bir tarih ve saat seçerek planınızı güncelleyin.</p>
    </div>

    <div class="info-section row">
        <div class="col-6">
            <span class="info-label">Eğitmen</span>
            <span class="info-value">@Model.TrainerName</span>
        </div>
        <div class="col-6">
            <span class="info-label">Hizmet</span>
            <span class="info-value">@Model.ServiceName</span>
        </div>
    </div>

    <form asp-action="Reschedule" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AppointmentId" />

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

        <div class="mb-4">
            <label class="info-label">Yeni Tarih</label>
            <input asp-for="AppointmentDate" class="form-control custom-input" type="date"
                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label class="info-label">Yeni Saat</label>
            <input asp-for="StartTime" class="form-control custom-input" type="time" />
            <span asp-validation-for="StartTime" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-save">Değişiklikleri Kaydet</button>
        <a asp-action="My" class="btn btn-cancel">Vazgeç</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}