@model IEnumerable<odev1.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Yönetimi - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    /* Tablo Stilini Sıfırlama ve Özelleştirme */
    .trainer-table {
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .trainer-table thead th {
            border: none;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #999;
            font-weight: 700;
            padding: 0 20px 10px;
        }

        .trainer-table tbody tr {
            background-color: #fafafa;
            transition: all 0.2s ease;
        }

            .trainer-table tbody tr:hover {
                background-color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .trainer-table td {
            border: none;
            padding: 20px;
            vertical-align: middle;
        }

            .trainer-table td:first-child {
                border-radius: 12px 0 0 12px;
            }

            .trainer-table td:last-child {
                border-radius: 0 12px 12px 0;
            }

    .trainer-info-name {
        font-weight: 700;
        color: #111;
        display: block;
    }

    /* Rozetler */
    .badge-lion {
        background-color: #eee;
        color: #666;
        font-weight: 600;
        font-size: 0.7rem;
        padding: 5px 10px;
        border-radius: 6px;
        text-transform: uppercase;
    }

    .badge-service {
        background-color: #fff3e0;
        color: #ff6b00;
    }

    /* Butonlar */
    .btn-action {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        text-decoration: none;
        border: none;
    }

    .btn-edit {
        background-color: #111;
        color: #fff;
    }

        .btn-edit:hover {
            background-color: #ff6b00;
            color: #fff;
        }

    .btn-delete {
        background-color: #f8f9fa;
        color: #dc3545;
        margin-left: 5px;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .btn-add-new {
        background-color: #111;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-add-new:hover {
            background-color: #ff6b00;
            color: white;
        }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Eğitmen Kadrosu</h2>
            <p class="text-muted small mb-0">Sistemdeki tüm antrenörleri buradan yönetebilirsiniz.</p>
        </div>
        <a asp-controller="Admin" asp-action="createTrainer" class="btn-add-new">
            <i class="fas fa-plus me-2"></i>Yeni Eğitmen
        </a>
    </div>

    <div class="table-responsive">
        <table class="table trainer-table">
            <thead>
                <tr>
                    <th>Antrenör</th>
                    <th>İletişim</th>
                    <th>Hizmetler</th>
                    <th>Uzmanlık Alanları</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-3" style="width: 40px; height: 40px; background: #eee; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-weight: bold; color: #999;">
                                    @if (!string.IsNullOrEmpty(item.fullName))
                                    {
                                        @item.fullName.Substring(0, 1).ToUpper()
                                    }
                                    else
                                    {
                                        <span>?</span>
                                    }
                                </div>
                                <div>
                                    <span class="trainer-info-name">@item.fullName</span>
                                    <small class="text-muted">ID: #@item.id</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="small text-muted">@item.User?.Email</span>
                        </td>
                        <td>
                            @if (item.trainerServices != null && item.trainerServices.Count > 0)
                            {
                                <span class="badge-lion badge-service">@item.trainerServices.Count Hizmet</span>
                            }
                            else
                            {
                                <span class="text-muted small">-</span>
                            }
                        </td>
                        <td>
                            @if (item.trainerExpertises != null)
                            {
                                int expCount = 0;
                                foreach (var exp in item.trainerExpertises)
                                {
                                    if (expCount < 2)
                                    {
                                        <span class="badge-lion me-1">@exp.expertise?.expertise</span>
                                    }
                                    expCount++;
                                }
                                if (expCount > 2)
                                {
                                    int extra = expCount - 2;
                                    <small class="text-muted">+@extra</small>
                                }
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn-action btn-edit" title="Düzenle">
                                <i class="fas fa-pen" style="font-size: 0.8rem;"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn-action btn-delete"
                               onclick="return confirm('Bu antrenörü silmek istediğine emin misin?');" title="Sil">
                                <i class="fas fa-trash-alt" style="font-size: 0.8rem;"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-5 border-top pt-4">
        <a asp-action="Index" class="text-muted text-decoration-none small">
            <i class="fas fa-chevron-left me-1"></i> Admin Paneline Dön
        </a>
    </div>
</div>