@model IEnumerable<odev1.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fas fa-users-cog me-2"></i>Antrenör Listesi</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i>Yeni Antrenör Ekle
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>İletişim</th>
                        <th>Verdiği Hizmetler</th>
                        <th>Uzmanlıklar</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.fullName</td>
                            <td><small class="text-muted">@item.User.Email</small></td>

                            <td>
                                @if (item.trainerServices.Any())
                                {
                                    <span class="badge bg-info text-dark">@item.trainerServices.Count Hizmet</span>
                                }
                                else
                                {

                                    <span class="text-muted small">-</span>
                                }
                            </td>

                            <td>
                                @foreach (var exp in item.trainerExpertises.Take(2))
                                {
                                    <span class="badge bg-secondary me-1">@exp.expertise.expertise</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-primary me-1" title="Düzenle">
                                    <i class="fas fa-edit"></i> Detay
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger" onclick="return confirm('Bu antrenörü silmek istediğine emin misin?');" title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>