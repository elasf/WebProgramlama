@model IEnumerable<odev1.Models.Trainer>
@{
    ViewData["Title"] = "Eğitmenler";
}

<h2>Eğitmenler</h2>
<hr />

<div class="row g-3">
@foreach (var t in Model)
{
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@t.fullName</h5>
                <div class="mt-auto d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-controller="User" asp-action="TrainerDetails" asp-route-id="@t.id">
                        Detay
                    </a>
                    <a class="btn btn-sm btn-primary"
                       asp-controller="Appointments" asp-action="Create">
                        Randevu Al
                    </a>
                </div>
            </div>
        </div>
    </div>
}
</div>

<div class="mt-3">
    <a asp-controller="User" asp-action="Book" class="btn btn-primary">Randevu Al</a>
</div>

