@model IEnumerable<odev1.Models.Service>
@{
    ViewData["Title"] = "Hizmetlerimiz - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    /* Daha ince ve sade kartlar */
    .service-box {
        border: 1px solid #f0f0f0;
        border-radius: 12px;
        padding: 25px;
        height: 100%;
        transition: all 0.2s ease-in-out;
        background: #fff;
    }

        .service-box:hover {
            border-color: #ddd;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

    .service-title {
        font-weight: 700;
        font-size: 1.15rem;
        color: #111;
        margin-top: 10px;
    }

    /* Fiyatı daha az bağıran bir hale getirdik */
    .price-label {
        color: #ff6b00; /* Turuncuyu sadece burada vurgu olarak bıraktık */
        font-weight: 700;
        font-size: 1rem;
    }

    .service-meta {
        font-size: 0.85rem;
        color: #999;
        margin-bottom: 15px;
    }

    /* Siyah ağırlıklı butonlar */
    .btn-dark-lion {
        background-color: #111;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: background 0.2s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-dark-lion:hover {
            background-color: #ff6b00; /* Sadece üzerine gelince markanın turuncusu yansısın */
            color: white;
        }

    .btn-link-gray {
        color: #777;
        font-size: 0.9rem;
        text-decoration: none;
        font-weight: 500;
        padding: 10px;
    }

        .btn-link-gray:hover {
            color: #111;
        }
</style>

<div class="container py-5">
    <div class="mb-5">
        <h3 class="fw-bold mb-1">Hizmetlerimiz</h3>
        <p class="text-muted small">Size en uygun çalışma alanını seçin.</p>
    </div>

    <div class="row g-4">
        @foreach (var s in Model)
        {
            <div class="col-md-4">
                <div class="service-box d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <span class="price-label">@s.price.ToString("C0")</span>
                        <small class="text-muted"><i class="far fa-clock"></i> @s.duration dk</small>
                    </div>

                    <h5 class="service-title">@s.name</h5>

                    <p class="small text-muted mb-4">
                        Kişiselleştirilmiş antrenman metodları ve profesyonel ekipmanlarla @s.name.
                    </p>

                    <div class="mt-auto d-flex align-items-center justify-content-between">
                        <a asp-controller="User" asp-action="ServiceDetails" asp-route-id="@s.id" class="btn-link-gray">
                            Detaylar
                        </a>
                        <a asp-controller="Appointments" asp-action="Create" asp-route-serviceId="@s.id" class="btn-dark-lion">
                            Randevu Al
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>