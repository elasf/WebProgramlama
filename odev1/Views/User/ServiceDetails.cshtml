@model IEnumerable<odev1.Models.Trainer>
@{
    var svc = (odev1.Models.Service)ViewBag.Service;
    var dateStr = (string)ViewBag.Date;
    ViewData["Title"] = $"{svc.name} - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    /* Üst Başlık ve Bilgi */
    .service-header {
        border-bottom: 1px solid #eee;
        padding-bottom: 25px;
        margin-bottom: 35px;
    }

    .meta-info {
        font-size: 0.9rem;
        color: #888;
        font-weight: 500;
    }

    .price-text {
        color: #ff6b00;
        font-weight: 700;
        font-size: 1.2rem;
    }

    /* Tarih Filtreleme Alanı */
    .filter-box {
        background-color: #fafafa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 40px;
    }

    .section-title {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        color: #999;
        margin-bottom: 15px;
        font-weight: 700;
        display: block;
    }

    /* Eğitmen Listesi */
    .trainer-item {
        border-bottom: 1px solid #f0f0f0;
        padding: 18px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.2s;
    }

        .trainer-item:hover {
            background-color: #fcfcfc;
        }

    .trainer-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: #111;
    }

    /* Butonlar */
    .btn-action-dark {
        background-color: #111;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
    }

        .btn-action-dark:hover {
            background-color: #ff6b00;
            color: #fff;
        }

    .btn-outline-lion {
        border: 1px solid #ddd;
        color: #666;
        padding: 8px 18px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-outline-lion:hover {
            border-color: #111;
            color: #111;
            background: #fafafa;
        }
</style>

<div class="container py-5" style="max-width: 850px;">
    <div class="service-header d-flex justify-content-between align-items-end">
        <div>
            <span class="section-title">Hizmet Detayı</span>
            <h2 class="fw-bold mb-1">@svc.name</h2>
            <div class="meta-info">
                <i class="far fa-clock me-1"></i> @svc.duration dakika seans
            </div>
        </div>
        <div class="text-end">
            <div class="price-text">@svc.price.ToString("C")</div>
        </div>
    </div>

    <div class="filter-box shadow-sm">
        <span class="section-title">Uygunluk Kontrolü</span>
        <form method="get" class="row g-3 align-items-center">
            <input type="hidden" name="id" value="@svc.id" />
            <div class="col-auto">
                <input type="date" class="form-control border-0 shadow-sm rounded-3"
                       name="date" value="@dateStr" style="padding: 10px 15px;" />
            </div>
            <div class="col-auto">
                <button class="btn btn-dark px-4 rounded-3" type="submit" style="padding: 10px 20px;">Filtrele</button>
            </div>
        </form>
    </div>

    <div class="mb-5">
        <span class="section-title">Bu Branştaki Eğitmenlerimiz</span>
        @if (!Model.Any())
        {
            <div class="alert alert-light border text-muted small">
                Bu hizmet için şu an tanımlı bir eğitmen bulunamadı.
            </div>
        }
        else
        {
            <div class="trainer-list mt-3">
                @foreach (var t in Model)
                {
                    <div class="trainer-item">
                        <div class="trainer-name">
                            <i class="fas fa-certificate text-warning me-2" style="font-size: 0.8rem;"></i> @t.fullName
                        </div>
                        <div class="d-flex gap-2">
                            <a class="btn-outline-lion"
                               asp-controller="User" asp-action="TrainerDetails"
                               asp-route-id="@t.id" asp-route-serviceId="@svc.id" asp-route-date="@dateStr">
                                Profil ve Saatler
                            </a>
                            <a class="btn-action-dark"
                               asp-controller="Appointments" asp-action="Create"
                               asp-route-serviceId="@svc.id">
                                Hızlı Randevu
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="mt-5 border-top pt-4">
        <a class="btn btn-link text-muted text-decoration-none p-0 small" asp-controller="User" asp-action="Services">
            <i class="fas fa-chevron-left me-1"></i> Hizmetlere Geri Dön
        </a>
    </div>
</div>