@model List<odev1.ViewModels.AIRecommendationResultViewModel>
@{
    ViewData["Title"] = "AI Ge癟miim - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    .history-container {
        max-width: 900px;
        margin-top: 40px;
    }

    /* Kay覺t Sat覺r覺 Tasar覺m覺 */
    .recommendation-item {
        border: 1px solid #f0f0f0;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.2s ease;
        background-color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .recommendation-item:hover {
            border-color: #ff6b00;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .rec-date {
        font-weight: 700;
        color: #111;
        font-size: 1.1rem;
        display: block;
    }

    .rec-meta {
        font-size: 0.85rem;
        color: #999;
    }

    /* K羹癟羹k Bilgi Etiketleri */
    .mini-badge {
        font-size: 0.75rem;
        font-weight: 700;
        color: #666;
        background: #f5f5f5;
        padding: 4px 10px;
        border-radius: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-details {
        background-color: #111;
        color: #fff;
        border-radius: 8px;
        padding: 8px 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-details:hover {
            background-color: #ff6b00;
            color: #fff;
        }

    .section-title {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: #999;
        font-weight: 700;
        display: block;
        margin-bottom: 30px;
    }
</style>

<div class="container history-container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold mb-1">AI Analiz Ge癟miim</h2>
            <p class="text-muted small">Yapay zeka taraf覺ndan haz覺rlanan t羹m eski programlar覺n.</p>
        </div>
        <a asp-action="Create" class="btn btn-dark rounded-3 px-4 shadow-sm">
            <i class="fas fa-plus me-1"></i> Yeni Analiz
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border rounded-3 bg-light">
            <div class="mb-3" style="font-size: 2.5rem;"></div>
            <h5 class="fw-bold">Hen羹z bir analiziniz yok.</h5>
            <p class="text-muted small">Hemen ilk 繹nerinizi almak i癟in yukar覺daki butonu kullan覺n.</p>
        </div>
    }
    else
    {
        <span class="section-title border-bottom pb-2">Kay覺tl覺 Programlar</span>

        <div class="mt-4">
            @foreach (var rec in Model.OrderByDescending(x => x.CreatedAt))
            {
                <div class="recommendation-item shadow-sm">
                    <div>
                        <span class="rec-date">@rec.CreatedAt.ToString("dd MMMM yyyy")</span>
                        <div class="rec-meta mt-1">
                            <span class="mini-badge me-1">@rec.Goal</span>
                            <span class="mini-badge me-1">@rec.BodyType</span>
                            <span class="ms-2">
                                @if (rec.Weight.HasValue)
                                {
                                    <span>@rec.Weight kg</span>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                        <div class="text-muted small d-none d-md-block">
                            <i class="far fa-clock"></i> @rec.CreatedAt.ToString("HH:mm")
                        </div>
                        <a asp-action="Details" asp-route-id="@rec.Id" class="btn-details">
                            G繹r羹nt羹le
                        </a>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-5 pt-4 text-center">
        <a asp-controller="User" asp-action="Index" class="text-muted text-decoration-none small">
            <i class="fas fa-arrow-left me-1"></i> Panele D繹n
        </a>
    </div>
</div>