@model IEnumerable<odev1.Models.Service>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmet Listesi</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Yeni Hizmet Ekle</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.name</td>

                    <td><i class="far fa-clock me-1"></i> @item.duraiton dk</td>

                    <td>@item.price.ToString("C2")</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istiyor musun?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>