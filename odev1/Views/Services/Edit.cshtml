@model odev1.Models.Service

<div class="container mt-4">
    <h3>Hizmeti Düzenle</h3>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="id" />

                <div class="mb-3">
                    <label class="form-label">Hizmet Adı</label>
                    <input asp-for="name" class="form-control"/>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Süre (Dakika)</label>
                    <div class="input-group">
                        <input asp-for="duraiton" class="form-control" type="number" value="60" />
                        <span class="input-group-text">dk</span>
                    </div>
                    <span asp-validation-for="duraiton" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Seans Ücreti</label>
                    <div class="input-group">
                        <span class="input-group-text">₺</span>
                        <input asp-for="price" class="form-control" type="number" step="0.01" />
                    </div>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning">Güncelle</button>
                <a asp-action="listServices" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>