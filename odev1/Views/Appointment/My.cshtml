@model IEnumerable<odev1.Models.Appointment>
@{
    ViewData["Title"] = "Randevularım";
}

<h2>Randevularım</h2>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Eğitmen</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>Ücret</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var a in Model)
    {
        <tr>
            <td>@a.service?.name</td>
            <td>@a.trainer?.fullName</td>
            <td>@a.AppointmentDate.ToString("dd.MM.yyyy")</td>
            <td>@a.StartTime.ToString(@"hh\:mm") - @a.EndTime.ToString(@"hh\:mm")</td>
            <td>@a.Status</td>
            <td>@a.Price.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>