@model IEnumerable<odev1.Models.Appointment>

@{
    ViewData["Title"] = "Takvimim - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        color: #333;
    }

    .trainer-container {
        max-width: 1000px;
        margin-top: 40px;
    }

    .appointment-row {
        border: 1px solid #f0f0f0;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 15px;
        transition: all 0.2s ease;
        background-color: #fff;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

        .appointment-row:hover {
            border-color: #ff6b00;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .time-box {
        min-width: 110px;
        text-align: center;
        border-right: 2px solid #ff6b00;
        margin-right: 25px;
        padding-right: 15px;
    }

    .time-start {
        font-weight: 800;
        font-size: 1.3rem;
        color: #111;
        display: block;
    }

    .time-date {
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        font-weight: 700;
    }

    .member-info {
        flex-grow: 1;
    }

    .member-name {
        font-weight: 700;
        font-size: 1.15rem;
        color: #111;
    }

    .service-tag {
        font-size: 0.75rem;
        background-color: #f5f5f5;
        color: #666;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
    }

    .status-badge {
        font-size: 0.7rem;
        font-weight: 800;
        padding: 6px 12px;
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
    }

    .status-upcoming {
        background-color: #fff3e0;
        color: #ff6b00;
    }

    .status-approved {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-completed {
        background-color: #f5f5f5;
        color: #999;
    }

    .status-pending {
        background-color: #fff9db;
        color: #f59f00;
    }

    .btn-approve {
        background-color: #111;
        color: white;
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.8rem;
        padding: 8px 16px;
        transition: all 0.2s;
    }

        .btn-approve:hover {
            background-color: #ff6b00;
            color: white;
            transform: scale(1.05);
        }
</style>

<div class="container trainer-container py-5">
    <div class="mb-5">
        <h2 class="fw-bold mb-1">Antrenman Takvimim 📅</h2>
        <p class="text-muted small">@User.Identity.Name, bugün odaklanman gereken randevular aşağıda.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 border rounded-4 bg-light">
            <p class="text-muted">Henüz planlanmış bir randevunuz bulunmuyor.</p>
        </div>
    }
    else
    {
        @foreach (var app in Model)
        {
            var fullAppointmentDateTime = app.AppointmentDate.Date.Add(app.StartTime);

            <div class="appointment-row shadow-sm">
                <div class="time-box">
                    <span class="time-start">@app.StartTime.ToString(@"hh\:mm")</span>
                    <span class="time-date">@app.AppointmentDate.ToString("dd MMM")</span>
                </div>

                <div class="member-info">
                    <div class="member-name">
                        @if (app.user != null)
                        {
                            @($"{app.user.userAd} {app.user.userSoyad}")
                        }
                        else
                        {
                            <span>Bilinmeyen Üye</span>
                        }
                    </div>
                    <span class="service-tag">@(app.service?.name ?? "Hizmet")</span>
                    <span class="ms-2 text-muted small"><i class="far fa-clock me-1"></i> @(app.service?.duration ?? 0) dk</span>
                </div>

                <div class="d-flex align-items-center gap-3">
                    @if (app.Status == odev1.Models.AppointmentStatus.Pending)
                    {
                        <span class="status-badge status-pending">Onay Bekliyor</span>
                        <form asp-action="ApproveAppointment" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@app.id" />
                            <button type="submit" class="btn btn-approve shadow-sm">
                                <i class="fas fa-check me-1"></i> ONAYLA
                            </button>
                        </form>
                    }
                    else
                    {
                        @if (fullAppointmentDateTime > DateTime.Now)
                        {
                            <span class="status-badge status-approved">Onaylandı</span>
                            <span class="status-badge status-upcoming">Yaklaşıyor</span>
                        }
                        else
                        {
                            <span class="status-badge status-completed">Geçmiş</span>
                        }
                    }
                </div>
            </div>
        }
    }
</div>