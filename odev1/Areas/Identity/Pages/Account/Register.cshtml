@page
@model RegisterModel
@{
    ViewData["Title"] = "LionGym'e Katıl";
}

<style>
    body {
        background-color: #ffffff;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .register-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .register-card {
        border: none;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.08);
        overflow: hidden;
        max-width: 600px;
        width: 100%;
        background: #fff;
    }

    .register-header {
        background-color: #111;
        padding: 40px;
        text-align: center;
        color: white;
    }

        .register-header h2 {
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 5px;
        }

        .register-header span {
            color: #ff6b00;
        }

    .register-body {
        padding: 40px;
    }

    /* Input Modernizasyonu */
    .form-floating > .form-control {
        border: 1px solid #eee;
        border-radius: 12px;
        background-color: #fafafa;
    }

        .form-floating > .form-control:focus {
            border-color: #ff6b00;
            box-shadow: none;
            background-color: #fff;
        }

    .btn-register {
        background-color: #111;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 15px;
        font-weight: 700;
        transition: all 0.3s;
        margin-top: 20px;
    }

        .btn-register:hover {
            background-color: #ff6b00;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 107, 0, 0.2);
        }

    .section-title {
        font-size: 0.75rem;
        font-weight: 800;
        color: #bbb;
        letter-spacing: 1.2px;
        text-transform: uppercase;
        margin-bottom: 15px;
        display: block;
    }
</style>

<div class="container register-container">
    <div class="register-card">
        <div class="register-header">
            <h2>LION<span>GYM</span></h2>
            <p class="small mb-0 opacity-75">Hemen üye ol ve değişim başlasın.</p>
        </div>

        <div class="register-body">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                <span class="section-title">Kişisel Bilgiler</span>
                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Ad" class="form-control" placeholder="Ad" />
                            <label asp-for="Input.Ad">Ad</label>
                            <span asp-validation-for="Input.Ad" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Soyad" class="form-control" placeholder="Soyad" />
                            <label asp-for="Input.Soyad">Soyad</label>
                            <span asp-validation-for="Input.Soyad" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Telefon" class="form-control" placeholder="Telefon" />
                    <label asp-for="Input.Telefon">Telefon Numarası</label>
                    <span asp-validation-for="Input.Telefon" class="text-danger small"></span>
                </div>

                <span class="section-title">Hesap Güvenliği</span>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">E-posta Adresi</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                            <label asp-for="Input.Password">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                            <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn-register shadow-sm">KAYIT OL</button>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">
                        Zaten hesabın var mı?
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-dark text-decoration-none">Giriş Yap</a>
                    </p>
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row g-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <div class="col-12">
                                <button type="submit" class="btn btn-outline-dark w-100 py-2 small" name="provider" value="@provider.Name">
                                    @provider.DisplayName ile Kayıt Ol
                                </button>
                            </div>
                        }
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}