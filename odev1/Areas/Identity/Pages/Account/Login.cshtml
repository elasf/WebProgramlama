@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap - LionGym";
}

<style>
    body {
        background-color: #ffffff;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .login-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        border: none;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.08);
        overflow: hidden;
        max-width: 500px;
        width: 100%;
        background: #fff;
    }

    .login-header {
        background-color: #111;
        padding: 40px;
        text-align: center;
        color: white;
    }

        .login-header h2 {
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 5px;
        }

        .login-header span {
            color: #ff6b00;
        }

    .login-body {
        padding: 40px;
    }

    /* Input Modernizasyonu */
    .form-floating > .form-control {
        border: 1px solid #eee;
        border-radius: 12px;
        background-color: #fafafa;
    }

        .form-floating > .form-control:focus {
            border-color: #ff6b00;
            box-shadow: none;
            background-color: #fff;
        }

    .btn-login {
        background-color: #111;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 15px;
        font-weight: 700;
        transition: all 0.3s;
        margin-top: 10px;
    }

        .btn-login:hover {
            background-color: #ff6b00;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 107, 0, 0.2);
        }

    .auth-link {
        color: #888;
        text-decoration: none;
        font-size: 0.85rem;
        transition: color 0.2s;
    }

        .auth-link:hover {
            color: #ff6b00;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        color: #ccc;
        margin: 20px 0;
    }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #eee;
        }

        .divider span {
            padding: 0 10px;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
</style>

<div class="container login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>LION<span>GYM</span></h2>
            <p class="small mb-0 opacity-75">Sınırlarını aşmaya hazır mısın?</p>
        </div>

        <div class="login-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">E-posta Adresi</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                            Beni Hatırla
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">Şifremi Unuttum</a>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn-login shadow-sm">GİRİŞ YAP</button>

                <div class="divider">
                    <span>VEYA</span>
                </div>

                <div class="text-center">
                    <p class="small text-muted mb-1">Henüz üye değil misin?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-dark text-decoration-none">Hemen Kayıt Ol</a>
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-3">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark w-100 mb-2 small" name="provider" value="@provider.Name">
                            @provider.DisplayName ile devam et
                        </button>
                    }
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}